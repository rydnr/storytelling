[tool.poetry]
name = "@pname@"
version = "@version@"
description = "@desc@"
authors = [ @authors@ ]
readme = "README.md"
homepage = "@homepage@"
packages = [{include = "rydnr"}]

[tool.poetry.dependencies]
google-generativeai = "^@googleGenerativeAI@"
openai = "^@openai@"
python = "^@pythonMajorMinorVersion@"
python-dotenv = "^@pythonDotenv@"
pillow = "^@pillow@"
pythoneda-shared-pythonlang-application = "^@pythonedaSharedPythonlangApplication@"
pythoneda-shared-pythonlang-domain = "^@pythonedaSharedPythonlangDomain@"

[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"
